# Kicks and Clothes Temple - Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=medusa
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=medusa_db

# ===========================================
# SECURITY (Generate strong random strings!)
# ===========================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
COOKIE_SECRET=your_cookie_secret_here

# ===========================================
# CORS SETTINGS (Update with your domain)
# ===========================================
STORE_CORS=https://yourdomain.com
ADMIN_CORS=https://admin.yourdomain.com,https://yourdomain.com
AUTH_CORS=https://yourdomain.com,https://admin.yourdomain.com

# ===========================================
# PAYMENT PROVIDERS
# ===========================================
# Stripe (for international payments)
STRIPE_API_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Paystack (for Ghana/Nigeria)
PAYSTACK_SECRET_KEY=sk_live_xxxxx

# ===========================================
# STOREFRONT SETTINGS
# ===========================================
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_xxxxx
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://api.yourdomain.com
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
NEXT_PUBLIC_DEFAULT_REGION=gh
NEXT_PUBLIC_PAYSTACK_KEY=pk_live_xxxxx
NEXT_PUBLIC_STRIPE_KEY=pk_live_xxxxx
REVALIDATE_SECRET=your_revalidate_secret_here
